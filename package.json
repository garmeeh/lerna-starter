{
  "name": "@gmdev/lerna-starter",
  "version": "0.0.1",
  "description": "@gmdev is my dummy organisation to show scoped packages",
  "scripts": {
    "storybook": "NODE_ENV=development start-storybook -p 9001 --ci",
    "prestart": "npm install && npm run build",
    "start": "npm-run-all --parallel storybook build:watch",
    "test": "jest --coverage",
    "test:watch": "jest --watch --runInBand",
    "bootstrap": "lerna bootstrap",
    "build": "lerna exec --parallel -- babel src -d dist --ignore src/__tests__/,src/__stories__/,src/__wireframe__/**",
    "build:watch": "npm run build -- --watch",
    "export-static-storybook": "build-storybook -c .storybook -o .out",
    "publish-packages": "lerna publish",
    "prepublish-packages": "npm run build",
    "precommit": "npm run test",
    "postinstall": "npm run bootstrap",
    "fix": "prettier \"**/*.{js,jsx,json,md,mdx}\" --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garmeeh/lerna-starter.git"
  },
  "author": "Gary Meehan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/garmeeh/lerna-starter/issues"
  },
  "homepage": "https://github.com/garmeeh/lerna-starter/#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-transform-modules-commonjs": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^5.2.0-alpha.31",
    "@storybook/addon-docs": "^5.2.0-alpha.31",
    "@storybook/react": "^5.2.0-alpha.31",
    "@testing-library/react": "^8.0.4",
    "babel-core": "^7.0.0-bridge",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.0.1",
    "eslint-config-react-app": "^4.0.1",
    "eslint-plugin-flowtype": "^3.11.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.14.2",
    "glob-loader": "^0.3.0",
    "jest": "^24.8.0",
    "jest-dom": "^3.5.0",
    "lerna": "^3.15.0",
    "lint-staged": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "styled-components": "^4.3.2",
    "styled-map": "^3.3.0"
  },
  "lint-staged": {
    "*.{js,json,css,mdx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": false,
    "arrowParens": "avoid",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false
  }
}
